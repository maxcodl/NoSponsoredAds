{
  "manifest_version": 3,
  "name": "Ad Blocker",
  "version": "1.0",
  "description": "Blocks Google-sponsored ads with an on/off switch",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "/main/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.google.com/*"],
      "js": ["/block/content.js"]
    }
  ]
}
